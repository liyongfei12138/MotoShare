# Uncomment the next line to define a global platform for your project
 platform :ios, '10.0'

source 'https://github.com/CocoaPods/Specs.git'

target 'MotoShare' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  pod 'Moya' # 网络请求抽象
  pod 'SwiftyJSON' # JSON转对象
  pod 'HandyJSON' # JSON 数据转模型
  pod 'Kingfisher' # 网络图片加载
  pod 'IQKeyboardManagerSwift' # 键盘适应
  pod 'BetterSegmentedControl' # 选项卡
  pod 'NVActivityIndicatorView' # loading加载视图
  pod 'PKHUD'	# HUD
  pod 'SwifterSwift'  # 扩展类集合
  pod 'SnapKit'	# 自动布局
  pod 'ESPullToRefresh' # 下拉刷新
  pod 'EmptyDataSet-Swift'  # 无数据占位图
  pod 'DeviceKit' # 设备相关
  pod 'GuidePageView' # 引导页
  pod "Pastel"  # 渐变
  pod 'CountryPickerView' # 国家代号
  pod 'URLNavigator'  # 路由
  pod 'DNSPageView' #分页pageview
  pod 'SwiftyFitsize' #适配文字大小 界面大小
  pod 'AMap3DMap-NO-IDFA' # 高德地图
end
